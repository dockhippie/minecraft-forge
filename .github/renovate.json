{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>webhippie/renovate:docker",
        "docker:pinDigests",
        "default:automergeDigest"
    ],
    "ignorePaths": [
        "archive/"
    ],
    "docker": {
        "digest": {
            "groupName": "Docker digests",
            "automerge": true
        }
    },
    "packageRules": [
        {
            "datasources": [
                "docker"
            ],
            "updateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "enabled": false
        }
    ],
    "ignoreDeps": [
        "docker/build-push-action"
    ]
}
